@model TrainerViewStudentsModel
@{
    ViewData["Title"] = "View Students";
}

<h2>Students</h2>

<table class="table-bordered, table-hover">
    <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Email
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>
                    @student.Name
                </td>
                <td>
                    @student.Email
                </td>
                <td>
                    @if (Model.EndDate <= DateTime.Now)
                    {
                        <a class="btn btn-primary">Assess</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

