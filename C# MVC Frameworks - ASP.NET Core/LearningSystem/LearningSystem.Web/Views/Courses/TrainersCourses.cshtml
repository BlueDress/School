@model IEnumerable<ListAllCoursesModel>

@{
    ViewData["Title"] = "Trainers Courses";
}

<h2>My Courses</h2>

<table class="table-bordered, table-hover">
    <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Start Date
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    @course.Name
                </td>
                <td>
                    @course.StartDate
                </td>
                <td>
                    <a class="btn btn-primary" href="/courses/trainerview/@course.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

