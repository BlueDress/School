@model IEnumerable<ListAllArticlesModel>
@{
    ViewData["Title"] = "All Articles";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input name="wordToSearch" type="text" placeholder="Search in articles" />
    <button type="submit" class="btn btn-default" value="Search">Search</button>
</form>

@foreach (var article in Model)
{
    <div class="d-inline-block bg-info">
        <h3>@article.Title</h3>
        <div>Published: @article.PublishDate.ToShortDateString() By: @article.AuthorName</div>
        <a href="/blog/articles/read/@article.Id">Read Article</a>
    </div>
}

