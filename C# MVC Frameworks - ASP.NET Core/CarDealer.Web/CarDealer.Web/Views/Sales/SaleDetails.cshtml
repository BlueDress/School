@model SaleModel

@{
    ViewData["Title"] = "Sale Details";
}

<h2>Sale Details</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Car Make
            </th>
            <th>
                Car Model
            </th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    @Model.Customer.Name
                </td>
                <td>
                    @Model.CarWithParts.Make
                </td>
                <td>
                    @Model.CarWithParts.Model
                </td>
            </tr>
    </tbody>
</table>

