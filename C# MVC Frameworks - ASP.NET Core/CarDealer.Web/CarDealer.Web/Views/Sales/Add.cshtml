@model AddSale

@{
    ViewData["Title"] = "Add Sale";
}

@{ 
        var numbers = new List<int>();

        for (int i = 0; i < 101; i++)
        {
            numbers.Add(i);
        }

        var numbersAsSelectList = numbers.Select(n => new SelectListItem
        {
            Text = n.ToString(),
            Value = n.ToString()
    });
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Customers">Customer:</label>
                    <select asp-for="SelectedCustomer" asp-items="Model.Customers"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Cars">Cars:</label>
                    <select asp-for="SelectedCar" asp-items="Model.Cars"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Discount">Discount:</label>
                    <select asp-for="Discount" asp-items="numbersAsSelectList"></select>
                    <span asp-validation-for="Discount" class="form-text text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-success" value="Add Sale">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

