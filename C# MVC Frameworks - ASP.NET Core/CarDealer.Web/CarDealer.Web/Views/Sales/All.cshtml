@model IEnumerable<SaleModel>

@{
    ViewData["Title"] = "All Sales";
}

<h2>All Sales</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Full Price
            </th>
            <th>
                Car Make
            </th>
            <th>
                Car Model
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>
                    @sale.Customer.Name
                </td>
                <td>
                    @sale.FullPrice
                </td>
                <td>
                    @sale.CarWithParts.Make
                </td>
                <td>
                    @sale.CarWithParts.Model
                </td>
            </tr>
        }
    </tbody>
</table>


