@model AllCustomersModel

@{
    ViewData["Title"] = "Ordered Customers";
}

<h2>Customers ordered by @Model.OrderType.ToString()</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Birth Date
            </th>
            <th>
                Young Driver
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.BirthDate.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @(customer.IsYoungDriver ? "Yes" : "No")
                </td>
                <td>
                    <a href="/customers/edit/@customer.Id" type="button" class="btn btn-warning" value="Edit Customer">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

