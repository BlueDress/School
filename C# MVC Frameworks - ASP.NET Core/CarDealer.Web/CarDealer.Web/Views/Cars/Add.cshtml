@model AddCarModel

@{
    ViewData["Title"] = "Add Car";
}

<h2>Add Car</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make">Make</label>
                <input asp-for="Make" type="text" required class="form-control" placeholder="Make">
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model">Model</label>
                <input asp-for="Model" type="text" required class="form-control" placeholder="Model">
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance">Travelled Distance</label>
                <input asp-for="TravelledDistance" type="text" required class="form-control" placeholder="Travelled Distance">
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parts">Parts</label>
                <select asp-for="SelectedParts" asp-items="Model.Parts" multiple size="5" class="form-control parts-select"></select>
            </div>
            <div>
                <small class="text-primary text-info">* Hold Ctrl to select multiple parts</small>
            </div>
            <br/>
            <div>
                <button type="submit" class="btn btn-success" value="Add Car">Submit</button>
            </div>
        </form>
    </div>
</div> 

