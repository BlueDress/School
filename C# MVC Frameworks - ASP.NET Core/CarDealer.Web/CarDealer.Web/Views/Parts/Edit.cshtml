@model PartModel

@{
    ViewData["Title"] = "Edit Part";
}

<h2>Edit Part</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" type="text" class="form-control" placeholder="@Model.Price">
                <span asp-validation-for="Price" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input asp-for="Quantity" type="text" class="form-control" placeholder="@Model.Quantity">
                <span asp-validation-for="Quantity" class="form-text text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-success" value="Edit Part">Edit</button>
            </div>
        </form>
    </div>
</div>


