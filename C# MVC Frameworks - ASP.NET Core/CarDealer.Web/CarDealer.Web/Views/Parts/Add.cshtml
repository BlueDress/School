@model CreatePartModel

@{
    ViewData["Title"] = "Add Part";
}

<h2>Add Part</h2>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierName">Supplier Name</label>
                <input asp-for="SupplierName" type="text" class="form-control" placeholder="Supplier Name">
                <span asp-validation-for="SupplierName" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" type="text" class="form-control" placeholder="Price">
                <span asp-validation-for="Price" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input asp-for="Quantity" type="number" class="form-control" placeholder="Quantity">
                <span asp-validation-for="Quantity" class="form-text text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-success" value="Add Part">Add</button>
            </div>
        </form>
    </div>
</div> 
