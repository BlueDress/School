@model CameraDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>
    @($"{Model.Model} {Model.Make} - ${Model.Price} - ")
    @if (Model.IsInStock)
    {
        <font color="green">IN STOCK</font>
    }
    else
    {
        <font color="red">OUT OF STOCK</font>
    }
</h2>
<h3><a href="/users/details/@Model.Username">@Model.Username</a></h3>
<div class="img-thumbnail">
    <a href="@Model.ImageUrl">
        <img src="@Model.ImageUrl" height="85" width="150">
    </a>
</div>
<br/>
<div>Is Full Frame: @(Model.IsFullFrame ? "Yes" : "No")</div>
<div>Min Shutter Speed: @Model.MinShutterSpeed"</div>
<div>Max Shutter Speed: 1/@Model.MaxShutterSpeed</div>
<div>MinISO: @Model.MinIso.ToString().Substring(3)</div>
<div>MaxISO: @Model.MaxIso</div>
<div>Video Resolution: @Model.VideoResolution</div>
<div>Light Metering: @Model.LightMetering</div>
<div>Description: @Model.Description</div>

